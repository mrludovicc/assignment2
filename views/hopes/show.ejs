<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("../partials/header") %>
    <main>
      <h2 class="subtitle is-2">Hopes</h2>
      <a href="/dashboard">DASHBOARD</a>

      <h3 class="title is-3"><%= hope.text %></h3>

      <form action="/hopes/<%= hope._id %>?_method=PUT" method="post">
        <input
          class="input"
          type="text"
          name="text"
          placeholder="new hope"
          value="<%= hope.text %>"
        />
        <input class="button" type="submit" value="edit hope" />
      </form>

      <form action="/hopes/<%= hope._id %>?_method=delete" method="post">
        <input class="button" type="submit" value="Delete hope" />
      </form>
    </main>
    <!-- THE HEAD TAG PARTIAL -->
    <%- include("../partials/footer") %>
  </body>
</html>
